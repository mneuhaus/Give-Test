{
  "variables": [
    {
      "name": "namespace",
      "question": "Please specify a namespace",
      "default": "Foo"
    }
  ],
  "replacements": [
    {
      "search": "namespace Foo",
      "replace": "namespace {{name|capitalize}}",
      "path": "/^Classes/"
    }
  ],
  "rename": [
    {
      "source": "Classes/Foo/Bar.php",
      "target": "Classes/{{name|capitalize}}/Bar.php"
    }
  ],
  "postProcessCommands": [
    {
      "command": "composer update"
    }
  ]
}
